{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block page_title %}{{ serviceName }} - Administration - Judges - Delete judge{% endblock %}
{% block page_identifier %}Administration - Judges - Delete judge{% endblock %}

{% set currentApp = "Court administration" %} 
{% set nav = "judges" %}

{% block content %}

  {% include "includes/errors.njk" %}  

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
      <form action="{{ processUrl }}" method="POST" id="deleteJudgeForm">
        <h1 class="govuk-heading-l">Are you sure you want to delete this judge?</h1>

        <p class="govuk-body">{{ judge.judgeName }}</p>

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Delete judge",
            type: "submit",
            classes: "govuk-button--warning"
          }) }}

          <a class="govuk-link" href="{{ cancelUrl }}">Cancel</a>
        </div>

        <input type="hidden" name="_csrf" id="_csrf" value="{{ csrftoken }}">
      </form>
    </div>
  </div>

{% endblock %}