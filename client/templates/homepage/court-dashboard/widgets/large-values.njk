<div id="widget_{{ widgetId }}" class="govuk-grid-row" aria-label="{{ widgetId | toSentenceCase }} widget">
  <div class="govuk-grid-column-full">
    <div class="mod-dashboard__large-values">
      {% for data in widget.values %}
        <div class="mod-dashboard__large-values__value {{ data.classes }}" aria-label="{{ data.ariaLabel }}">
          {% if data.suffix %}
            <span class="mod-dashboard__large-values__value--inline" aria-label="{{ data.value }} {{ data.suffix }}">
              <span class="govuk-!-font-size-80 govuk-!-font-weight-bold">{{ data.value }}</span>
              <span class="govuk-heading-m govuk-!-margin-bottom-1"> {{ data.suffix }}</span>
            </span>
          {% else %}
            <span class="govuk-!-font-size-80 govuk-!-font-weight-bold" aria-label="{{ data.value }}">
              {{ data.value }}
            </span>
          {% endif %}
          <span class="label">
            {% if data.label %}
              <span class="govuk-body govuk-!-font-weight-bold">{{ data.label }}</span>
            {% endif %}
            {% for link in data.links %}
              <a class="govuk-body govuk-link govuk-link--no-visited-state" href="{{ link.href }}">{{ link.text }}</a>
            {% endfor  %}
          </span>
        </div>
      {% endfor %}
    </div>
  </div>
</div>