{% extends "layouts/default-no-nav.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set currentApp = "Reports" %}

{% block head %}
  {{ super() }}

  <link rel="stylesheet" href="{{ assetPath }}css/report-print.css" />
{% endblock %}

{% block beforeContent %}
  <div class="back-button">
    {% include "includes/back-link.njk" %}
  </div>
{% endblock %}

{% block content %}
  <div class="print-header">
    <span><img src="{{ assetPath }}assets/images/hmcts-logo.png" width="30px" /></span>
    <b>HMCTS</b> Juror
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full mod-flex mod-space-between">
      <h1 class="title govuk-heading-l">Non-responded</h1>

      <div>
        {{ govukButton({
          text: "Print",
          classes: "govuk-button--secondary",
          attributes: {
            id: "printButton",
            name: "print-button",
            onclick: "printDoc()"
          }
        }) }}

        {% set genUrl = url("some-report.generate.get") + "?date-from=2023-01-01&date-to=2023-12-31" %}
        {{ govukButton({
          text: "Print pdf",
          classes: "govuk-button--secondary",
          href: genUrl,
          attributes: {
            target: "_blank",
            name: "print-button-pdf"
          }
        }) }}
      </div>
    </div>
  </div>

  <div class="govuk-grid-row" name="info-columns">
    <div class="govuk-grid-column-one-half">
      {{ govukSummaryList({
        attributes: {
          name: "info-column"
        },
        rows: [
          {
            key: {
              text: "Date from"
            },
            value: {
              text: makeDate | dateFilter(null, "dddd DD MMMM YYYY")
            }
          },
          {
            key: {
              text: "Date to"
            },
            value: {
              text: makeDate | dateFilter(null, "dddd DD MMMM YYYY")
            }
          },
          {
            key: {
              text: "Pool type"
            },
            value: {
              text: "Crown court"
            }
          },
          {
            key: {
              text: "Service start date"
            },
            value: {
              text: makeDate | dateFilter(null, "dddd DD MMMM YYYY")
            }
          },
          {
            key: {
              text: "Total non-responded pool members"
            },
            value: {
              text: "42"
            }
          }
        ]
      }) }}
    </div>

    <div class="govuk-grid-column-one-half">
      {{ govukSummaryList({
        attributes: {
          name: "info-column"
        },
        rows: [
          {
            key: {
              text: "Report created"
            },
            value: {
              text: makeDate | dateFilter(null, "dddd DD MMMM YYYY")
            }
          },
          {
            key: {
              text: "Time created"
            },
            value: {
              text: "1:46:52pm"
            }
          },
          {
            key: {
              text: "Court name"
            },
            value: {
              text: "Chester (415)"
            }
          }
        ]
      }) }}
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      {% set builtRows = [] %}
      {% for i in range(42) %}
        {% set builtRows = (builtRows.push([
          {
            text: sampleRow.jurorNumber
          },
          {
            text: sampleRow.firstName
          },
          {
            text: sampleRow.lastName
          },
          {
            text: sampleRow.mobilePhone
          },
          {
            text: sampleRow.homePhone
          }
        ]), builtRows) %}
      {% endfor %}

      {{ govukTable({
        attributes: {
          'data-module': 'moj-sortable-table'
        },
        head: [
          {
            text: "Juror number",
            attributes: {
              "aria-sort": "ascending",
              "aria-label": "Juror number"
            }
          },
          {
            text: "First name",
            attributes: {
              "aria-sort": "none",
              "aria-label": "First name"
            }
          },
          {
            text: "Last name",
            attributes: {
              "aria-sort": "none",
              "aria-label": "Last name"
            }
          },
          {
            text: "Mobile phone",
            attributes: {
              "aria-sort": "none",
              "aria-label": "Mobile phone"
            }
          },
          {
            text: "Home phone",
            attributes: {
              "aria-sort": "none",
              "aria-label": "Home phone"
            }
          }
        ],
        rows: builtRows
      }) }}

    </div>
  </div>

  <div class="page-number"></div>
{% endblock %}

{% block body_end %}
  {{ super() }}

  <script>
    function printDoc() {
      window.print();
    }
  </script>
{% endblock %}