{% extends "layouts/default-no-nav.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "includes/csrf.njk" import csrfProtection %}


{% block page_title %}{{ serviceName }} - Reports - {{ reportName }} report - Select month{% endblock %}
{% block page_identifier %}Reports - {{ reportName }} report - Select month{% endblock %}

{% set currentApp = "Reports" %}

{% block content %}
  {% include "includes/errors.njk" %}

  {% set selectMonthError = undefined %}
  {% if errors.items["selectMonth"] %}
    {% set selectMonthError = {text: errors.items["selectMonth"][0].details} %}
  {% endif %}

  <form action="{{ processUrl }}" method="post" id="cutoffDateForm">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">{{ reportName }} report</h1>
      </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        {{ govukSelect({
          id: "selectMonth",
          name: "selectMonth",
          label: {
            text: selectMonthLabel,
            classes: "govuk-label--m"
          },
          errorMessage: selectMonthError,
          items: months
        }) }}
        {% if showPreviousMonthsCheckbox %}
          {{ govukCheckboxes({
            name: "previousMonths",
            classes: "govuk-checkboxes--small",
            items: [
              {
                value: true,
                text: "Also display the 2 months before this"
              }
            ],
            values: tmpBody.previousMonths
          }) }}
        {% endif %}
        {{ csrfProtection(csrftoken) }}
        <div class="govuk-button-group">
          {{ govukButton({
            text: "Continue",
            type: "submit"
          }) }}
          <a href="{{ cancelUrl }}" class="govuk-link" id="cancelAnchor">Cancel</a>
        </div>
      </div>
    </div>
  </form>

{% endblock %}