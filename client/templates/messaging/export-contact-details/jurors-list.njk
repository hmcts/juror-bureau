{% extends "layouts/default.njk" %}

{% block page_title %}{{ serviceName }} - Messaging - Export contact details - Jurors list{% endblock %}
{% block page_identifier %}Messaging - Export contact details - Jurors list{% endblock %}

{% block beforeContent %}
  {% include "includes/back-link.njk" %}
{% endblock %}

{% block content %}

  {% include "includes/errors.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <span class="govuk-caption-xl">Export contact details</span>
      <h1 class="govuk-heading-xl">Select jurors to export details for</h1>

      {% if totalJurors > 0 and totalJurors !== "MAX_ITEMS_EXCEEDED" %}
        <div class="mod-flex mod-items-center mod-gap-x-2">
          <h2 class="govuk-heading-m">Showing {{ totalJurors }} jurors</h2>
          <a href="{{ url('messaging.export-contacts.get') }}" class="govuk-body govuk-link">Search again</a>
        </div>
      {% endif %}
    </div>
  </div>

  <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-5">

  {% include "./../_partials/juror-list-results.njk" %}

{% endblock %}

{% block body_end %}
  {{ super() }}

  <script src="{{ assetPath }}js/export-contact-details.js"></script>
{% endblock %}