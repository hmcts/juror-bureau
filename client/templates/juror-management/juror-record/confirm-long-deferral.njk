{% extends "layouts/default.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "includes/csrf.njk" import csrfProtection %}

{% block page_title %}{{ serviceName }} - Juror record - Confirm multiple deferral{% endblock %}
{% block page_identifier %}Juror record - Confirm multiple deferral{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">Confirm long deferral</h1>

      <form action="{{ postUrl }}" method="POST">
        <p class="govuk-body">Are you sure you want to defer the juror for over 12 months?</p>

        {{ csrfProtection(csrftoken) }}

        {% for name, value in bodyData %}
          <input type="hidden" name="{{ name }}" value="{{ value }}">
        {% endfor %}
        <input type="hidden" name="allowLongDeferral" value="true">

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Continue",
            attributes: {
              id: "continueButton"
            }
          }) }}
        
          <a class="govuk-link" href="{{ cancelUrl }}" id="cancelAnchor">
            Cancel
          </a>
        </div>

      </form>

    </div>
  </div>

{% endblock %}